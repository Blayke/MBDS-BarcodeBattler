<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battleversustest"
    android:orientation="vertical"
    tools:context="mbds.barcodebattler.CombatMascottesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/nommascotte1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#E0E0E0"
            android:text="Mascotte 1"

            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/nommascotte2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#E0E0E0"
            android:text="Mascotte 2"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imagemascotte1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="2"
            android:src="@drawable/pokemonombre" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="75dp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imagemascotte2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="2"
            android:src="@drawable/pokemonombre" />

    </LinearLayout>

    <!--Equipement-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <Button
            android:id="@+id/equipement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:background="@drawable/buttonshape"
            android:text="Equipement"
            android:textAlignment="center"
            android:textColor="#E0E0E0" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/deleteEquipement1"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/clearbutton" />
</LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/equipement2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonshape"
            android:text="Equipement"
            android:textAlignment="center"
            android:textColor="#E0E0E0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteEquipement2"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/clearbutton" />
        </LinearLayout>
    </LinearLayout>

    <!--Fight-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/retour"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:src="@drawable/previouswhite" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/combat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/swordfight"
            android:text="Fight"

            android:textAlignment="center"
            android:textSize="17sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Retour"
            android:textAlignment="center"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>


